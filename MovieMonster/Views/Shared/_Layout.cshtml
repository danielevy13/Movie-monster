<!DOCTYPE html>
<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieMonster</title>
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css" />

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body style="background:linear-gradient(rgba(47, 23, 15, 0.65), rgba(47, 23, 15, 0.65)), url('bg.jpg');background-image:url('/assets/img/my_movie_store_dvds_pack_3_by_ibg_5.jpg');">
    <h1 class="text-center text-white d-none d-lg-block site-heading"><span class="site-heading-lower" style="background-color: #343a40!important;">Movie monster</span></h1>
    <nav class="navbar navbar-light navbar-expand-lg bg-dark py-lg-4" id="mainNav">
        <div class="container">
            <a href="#" class="navbar-brand text-uppercase d-lg-none text-expanded">Brand</a><button data-toggle="collapse" data-target="#navbarResponsive" class="navbar-toggler" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="nav navbar-nav mx-auto">
                    <li role="presentation" class="nav-item"><a href="/Home" class="nav-link">Home</a></li>
                    <li role="presentation" class="nav-item"><a href="/Home/About" class="nav-link">About us</a></li>
                    <li role="presentation" class="nav-item"><a onclick="loadTableMovies()" class="nav-link">Products</a></li>
                    @await Html.PartialAsync("CartButten")
                    @*@if (SignInManager<ApplicationUser>.IsSignedIn(User))
        {
            <li role="presentation" class="nav-item"><a href="/Sales" class="nav-link">Cart</a></li>
        }*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li role="presentation" class="nav-item"><a onclick="CustomersAdvancedSearchPage()" class="nav-link">CustomersAdvancedSearch</a></li>
                            <li role="presentation" class="nav-item"><a onclick="SalesAdvancedSearchPage()" class="nav-link">SalesAdvancedSearch</a></li>
                            <li role="presentation" class="nav-item"><a onclick="SuppliersAdvancedSearchPage()" class="nav-link">SuppliersAdvancedSearchPage</a></li>
                        }
                    }
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css">
                    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
                    <div class="search__wrapper">
                        <input type="text" id="searchTxt" name="searchTxt" placeholder="Search for..." class="search__field"></input>
                        <button id="search-btn" type="submit" class="fa fa-search search__icon" onclick="Search()"></button>
                        <a onclick="AdvancedSearchPage()">AdvancedSearch</a>
                    </div>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div id="bodyContainer" class="container" style="background-color: #ffffff;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - MovieMonster</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <section class="page-section clearfix"></section>
    <footer class="footer text-faded text-center py-5">
        <div class="container">
            <p class="m-0 small">Copyright © M.M.D.O 2018</p>
        </div>
    </footer>
    <link rel="stylesheet" type="text/css" href="~/assets/css/searchCss.css">
    @*   @section Scripts{ *@
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/js/current-day.js"></script>
    <script src="~/assets/js/MovieMonstersScript.js"></script>
    @* } *@
    <style type="text/css">

        a:hover {
            cursor: pointer;
        }
    </style>

    @RenderSection("Scripts", required: false)
</body>
</html>
