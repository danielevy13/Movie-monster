
@using MovieMonster.Models;
@model MovieMonster.Models.Sale

<h4>Sale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMovieToCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SaleID" />
            <div class="form-group">
                <label asp-for="Movies" class="control-label"></label>
                <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.MovieID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
